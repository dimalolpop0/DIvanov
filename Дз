def questions():
    life = 3
    while life > 0:
        print("1 Загадка: зимой и летом одним светом.")
        a = str(input())
        if a.lower() != "ёлка":
            life -= 1 
            print("неправильно!", "кол-во оставшихся попыток:", life)
        else:
            print("молодец!", "у тебя осталось:", life)
            break
    while life > 0:
        print('2 Загадка: висит груша нельзя скушать.')
        a = str(input())
        if a.lower() != "лампа":
            life -= 1 
            print("неправильно!", "кол-во оставшихся попыток:", life)
        else:
            print("молодец!", "у тебя осталось:", life)
            break
    while life > 0:
        print('3 Загадка: зимой белый, летом серый')
        a = str(input())
        if a.lower() != "заяц":
            life -= 1 
            print("неправильно!", "кол-во оставшихся попыток:", life)
        else:
            print("молодец!", "у тебя осталось:", life)
            break
    b = life    
questions()
if b > 0:
    print("Молодец ты закончил отвечать на вопросы!")
else:
    print("Попробуй в следующий раз!")
